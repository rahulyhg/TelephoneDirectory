<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageButton
        android:id="@+id/btnAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/add_photo"
         />

    <EditText
        android:id="@+id/editDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_below="@+id/btnAdd"
        android:ems="10"
        android:hint="Дата рождения dd/mm/yyyy" />

    <EditText
        android:id="@+id/editSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editDateOfBirth"
        android:layout_alignLeft="@+id/editName"
        android:ems="10"
        android:hint="Введите Фамилию" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editSurname"
        android:layout_toRightOf="@+id/btnAdd"
        android:ems="10"
        android:hint="Введите Имя" />

    <EditText
        android:id="@+id/editSex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editDateOfBirth"
        android:layout_below="@+id/editDateOfBirth"
        android:ems="10"
        android:hint="Введите пол: Мужской/Женский" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTel"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick"
        android:text="Сохранить данные" />

    <EditText
        android:id="@+id/editAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editSex"
        android:layout_below="@+id/editSex"
        android:ems="10"
        android:hint="Введите Aдрес" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editAdress"
        android:layout_below="@+id/editAdress"
        android:ems="10"
        android:hint="Номер тел. (0ХХ)ХХХ ХХ ХХ" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>